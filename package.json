{
  "name": "@kibibit/project-template",
  "version": "1.0.0",
  "description": "all basic node.js project tools installed and ready to go",
  "main": "index.js",
  "scripts": {
    "generate-barrels": "barrelsby --delete -d ./src -l below -q",
    "coveralls": "cat ./test-results/coverage/lcov.info | coveralls",
    "commit": "npx git-cz",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch --coverage",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kibibit/project-template.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Kibibit/project-template/issues"
  },
  "homepage": "https://github.com/Kibibit/project-template#readme",
  "dependencies": {
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/fs-extra": "^8.0.1",
    "@types/lodash": "^4.14.149",
    "@types/moment": "^2.13.0",
    "@types/node": "^12.7.5",
    "barrelsby": "^2.2.0",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.9",
    "cz-conventional-changelog": "^3.0.2",
    "depcheck": "^0.9.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-github-reporter": "^0.3.4",
    "jest-stare": "^1.25.0",
    "now": "^16.7.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "verbose": true,
    "reporters": [
      "default",
      "jest-stare",
      "jest-github-reporter"
    ],
    "testResultsProcessor": "./node_modules/jest-stare",
    "watchPathIgnorePatterns": [
      ".*test-results.*\\.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": "\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./test-results/coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {}
  },
  "jest-stare": {
    "resultDir": "test-results/",
    "coverageLink": "./coverage/index.html"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && (npm run commit -- --hook) || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS || (git config commit.template .commit-template && false)"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
