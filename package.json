{
  "name": "@kibibit/kb-hologram",
  "version": "1.0.0-next.3",
  "description": "create images from templates and data",
  "types": "lib/image-maker.d.ts",
  "main": "lib/image-maker.js",
  "files": [
    "/lib",
    "/bin",
    "/templates",
    "Comfortaa-Regular.ttf"
  ],
  "scripts": {
    "build": "tsc",
    "generate-barrels": "barrelsby --delete -d ./src -l below -q",
    "coveralls": "cat ./test-results/coverage/lcov.info | coveralls",
    "commit": "npx git-cz",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest  --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "semantic-release": "semantic-release",
    "deploy-test-results": "kb-reporter"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kibibit/kb-hologram.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Kibibit/kb-hologram/issues"
  },
  "homepage": "https://github.com/Kibibit/kb-hologram#readme",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "file-type": "^12.4.2",
    "fs-extra": "^8.1.0",
    "jsdom": "^22.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "puppeteer": "^21.3.8",
    "svg2png": "^4.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@kibibit/test-report-now": "^1.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.1",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@types/file-type": "^10.9.1",
    "@types/fs-extra": "^8.0.1",
    "@types/handlebars": "^4.1.0",
    "@types/jest-image-snapshot": "^6.2.2",
    "@types/jsdom": "^21.1.4",
    "@types/lodash": "^4.14.200",
    "@types/moment": "^2.13.0",
    "@types/node": "^20.8.7",
    "@types/puppeteer": "^5.4.7",
    "@types/semantic-release": "^20.0.4",
    "@types/svg2png": "^4.1.4",
    "barrelsby": "^2.8.1",
    "commitizen": "^4.3.0",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "depcheck": "^1.4.7",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-github-reporter": "^1.1.1",
    "jest-image-snapshot": "^6.2.0",
    "jest-stare": "^2.5.1",
    "semantic-release": "22.0.5",
    "semantic-release-cli": "^5.4.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "verbose": true,
    "reporters": [
      "default",
      "jest-stare",
      "jest-github-reporter"
    ],
    "testResultsProcessor": "./node_modules/jest-stare",
    "watchPathIgnorePatterns": [
      ".*test-results.*\\.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": "\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./test-results/coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {}
  },
  "jest-stare": {
    "resultDir": "test-results/",
    "coverageLink": "./coverage/index.html"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && (npm run commit -- --hook) || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS || (git config commit.template .commit-template && false)"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "next",
        "prerelease": true
      }
    ],
    "npmPublish": true,
    "analyzeCommits": [
      "@semantic-release/commit-analyzer"
    ],
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/npm",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "docs/CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ]
  }
}
